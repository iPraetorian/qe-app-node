  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "type": "node",
      "name": "Debug API",
      "args": [
        "${workspaceFolder}/src/app.ts"
      ],
      "env": {
        "stage": "dev",
        "port": "4444",
      },
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "--inspect-brk=4444"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "port": 4444,
    }
  ]
}
