{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "inlineSources": false,
    "preserveConstEnums": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}